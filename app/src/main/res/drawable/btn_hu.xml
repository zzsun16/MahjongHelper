<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled -->
    <item android:state_enabled="false"><color android:color="@color/Pink" />
    </item>
    <!-- pressed + focused -->
    <item android:state_focused="true" android:state_pressed="true"><color android:color="@color/PalevioletRed" />
    </item>
    <!-- pressed -->
    <item android:state_pressed="true"><color android:color="@color/PalevioletRed" />
    </item>
    <!-- focused -->
    <item android:state_focused="true"><color android:color="@color/PalevioletRed" />
    </item>
    <!-- default -->
    <item><color android:color="@color/Pink" />
    </item>

</selector>